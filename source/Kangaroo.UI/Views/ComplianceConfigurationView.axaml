<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Kangaroo.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Kangaroo.UI.Views.ComplianceConfigurationView"
             x:DataType="viewModels:ComplianceConfigurationViewModel">
    
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label FontStyle="Italic" FontSize="10" Background="#2d2d2d">SELECT RECENT SCAN:</Label>
                <ComboBox ItemsSource="{Binding RecentScans}"
                          SelectedItem="{Binding SelectedScan}"
                          Width="200"
                          Margin="4">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource RecentScanTextConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
