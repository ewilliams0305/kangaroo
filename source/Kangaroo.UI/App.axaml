<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:local="using:Kangaroo.UI"
             xmlns:controls="clr-namespace:Kangaroo.UI.Controls"
             xmlns:converters="clr-namespace:Kangaroo.UI.Converters"
             x:Class="Kangaroo.UI.App"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    <Application.Styles>
       <styling:FluentAvaloniaTheme PreferUserAccentColor="True"/>
       <StyleInclude Source="avares://Kangaroo.UI/Assets/Icons.axaml"/>
       <StyleInclude Source="avares://Kangaroo.UI/Assets/ButtonStyles.axaml"/>
    </Application.Styles>

    <Application.Resources>
      <converters:ScanModeTextConverter x:Key="ScanModeTextConverter"/>
      <converters:NetworkAdapterTextConverter x:Key="NetworkAdapterTextConverter"/>
      <converters:RecentScanTextConverter x:Key="RecentScanTextConverter"/>
    </Application.Resources>
</Application>
